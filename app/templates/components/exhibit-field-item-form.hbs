<!-- app/templates/components/library-item-form.hbs -->
<div>

<div class="form-group">
  <label class="col-sm-2 control-label">Language</label>
  <div class="col-sm-10">
    {{input type="text" value=item.language class="form-control" placeholder="Exhibit's fields language"}}
  </div>
</div>

 <div class="form-group">
   <label class="col-sm-2 control-label">Name</label>
   <div class="col-sm-10">
     {{input type="text" value=item.name class="form-control" placeholder="Exhibit's name"}}
   </div>
 </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{textarea type="text" value=item.description class="form-control" placeholder="Exhibit's description"}}
    </div>
  </div>


   <div class="form-group">
     <label class="col-sm-2 control-label">Short Description</label>
     <div class="col-sm-10">
       {{textarea type="text" value=item.shortDescription class="form-control" placeholder="Exhibit's description"}}
     </div>
   </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'exhibitFieldSave' item exhibit }}>Save</button>
    </div>
  </div>
</div>
