<!-- app/templates/components/library-item-form.hbs -->
<div class="form-horizontal">
  <div class="form-group has-feedback {{if item.isValid 'has-success'}}">
    <label class="col-sm-2 control-label">Title*</label>
    <div class="col-sm-10">
      {{input type="text" value=item.name class="form-control" placeholder="Museum's name"}}
      {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Longitude</label>
    <div class="col-sm-10">
      {{input type="text" value=item.lon class="form-control" placeholder="Museum's longitude"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Latitude</label>
    <div class="col-sm-10">
      {{input type="text" value=item.lat class="form-control" placeholder="Museum's latitude"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Google Place ID</label>
    <div class="col-sm-10">
      {{input type="text" value=item.placeId class="form-control" placeholder="Museum's place ID for Google Place API"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled= {{unless item.isValid true}}>{{buttonLabel}}</button>
    </div>
  </div>
</div>
